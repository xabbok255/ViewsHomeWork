<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.xabbok.viewshomework.ui.StatsView
        android:id="@+id/statsViewBidirectional"
        android:layout_width="match_parent"
        android:layout_height="276dp"
        android:layout_marginTop="2dp"
        app:colors="@array/colors"
        app:fillType="bidirectional"
        app:lineWidth="24dp"
        app:textSize="20sp" />

    <com.xabbok.viewshomework.ui.StatsView
        android:id="@+id/statsViewSequential"
        android:layout_width="match_parent"
        android:layout_height="276dp"

        app:colors="@array/colors"
        app:fillType="sequential"
        app:lineWidth="24dp"
        app:textSize="20sp" />

    <com.xabbok.viewshomework.ui.StatsView
        android:id="@+id/statsViewParallel"
        android:layout_width="match_parent"
        android:layout_height="276dp"
        app:colors="@array/colors"
        app:fillType="parallel"
        app:lineWidth="24dp"
        app:textSize="20sp" />


</LinearLayout>